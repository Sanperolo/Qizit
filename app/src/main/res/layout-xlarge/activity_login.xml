<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AuthBackground"
    tools:context="com.ramiro.ernesto.qizit.LoginActivity">
    <!--android:background="@drawable/background_fill"-->


    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_alignParentLeft="true"
        android:src="@drawable/background"
        android:layout_height="match_parent"
        android:contentDescription="@string/backimage_description"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true" />



    <TextView
        android:id="@+id/title"
        style="@style/AuthTitle"
        />

    <TextView
        android:id="@+id/subtitle"
        style="@style/AuthTitle"
        android:textSize="15sp"
        android:layout_below="@id/title"
        android:text="@string/subtitle_string"
        android:layout_alignParentTop="false"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:id="@+id/keysLayout"
        style="@style/AuthFieldContainer">

        <EditText
            android:id="@+id/usernamefield"
            android:hint="@string/username_hint"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"
            android:textColorHint="@color/light_grey"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_width="match_parent">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/passwordfield"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"
            android:textColorHint="@color/light_grey"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_width="match_parent" />

    </LinearLayout>


    <Button
        android:id="@+id/loginbutton"
        android:text="@string/LoginButton_text"
        android:layout_below="@id/keysLayout"
        style="@style/AuthButton" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text"
        android:text="@string/signup_text"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        />
    <!--android:onClick="onClick"-->
    <!--android:clickable="true"-->

</RelativeLayout>